{
  "dataset_reader": {
    "class_name": "sq_reader",
    "valid_size": 1,
    "data_path": "/archive/savkin/parsed_datasets/natural_questions/nq_dataset_1_ctxs.json"
  },
  "dataset_iterator": {
    "class_name": "data_learning_iterator"
  },
  "chainer": {
    "in": ["question", "contexts"],
    "in_y": ["target"],
    "pipe": [
      {
        "class_name": "torch_transformers_fid_preprocessor",
        "vocab_file": "{TRANSFORMER}",
        "max_seq_length": 512,
        "answer_maxlength" : 20,
        "in": ["question", "contexts", "target"],
        "out": ["input_ids", "attention_mask", "target_ids"]
      },
      {
        "class_name": "torch_generative_qa_fid",
        "pretrained_transformer": "{TRANSFORMER}",
        "save_path": "{MODEL_PATH}/model",
        "load_path": "{MODEL_PATH}/model",
        "optimizer": "AdamW",
        "optimizer_parameters": {
          "lr": 3e-04,
          "weight_decay": 0.01,
          "betas": [0.9, 0.999],
          "eps": 1e-06
        },
        "learning_rate_drop_patience": 20,
        "learning_rate_drop_div": 1.5,
        "generate_max_length" : 20,
        "in": ["input_ids", "attention_mask"],
        "in_y": ["target_ids"],
        "out": ["answer"]
      }
    ],
    "out": ["answer"]
  },
  "train": {
    "show_examples": false,
    "evaluation_targets": [
      "valid"
    ],
    "log_every_n_batches": 1,
    "val_every_n_batches": 5,
    "batch_size": 1,
    "max_batches" : 15,
    "validation_patience": 5,
    "metrics": [
      {
        "name": "sacrebleu",
        "inputs": ["target", "answer"]
      },
      {
        "name": "kbqa_accuracy",
        "inputs": ["target", "answer"]
      },
      {
        "name": "squad_v2_em",
        "inputs": ["target", "answer"]
      },
      {
        "name": "squad_v2_f1",
        "inputs": ["target", "answer"]
      }
    ],
    "class_name": "torch_trainer"
  },
  "metadata": {
    "variables": {
      "TRANSFORMER": "t5-base",
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models",
      "MODEL_PATH": "{MODELS_PATH}/generative_qa/fid/natural_questions"
    }
  }
}